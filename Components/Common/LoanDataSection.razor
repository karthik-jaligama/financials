input[type="date"] {
    color: #0775C4;
    font-family: Inter;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 20.8px;
    letter-spacing: 0.24px;
    background: none;
    border: none;
    outline: none;
    padding: 0 !important;
    margin: 0 !important;
    box-shadow: none;
    width: 120px;
    transition: background-color 0.2s ease;
    box-sizing: border-box;
    cursor: pointer;
    -moz-appearance: textfield;
    appearance: textfield;
